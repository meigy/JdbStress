                    </excludes>
                    <includeSystemScope>true</includeSystemScope>
                    <mainClass>com.meigy.jstress.JstressApplication</mainClass>
                    <outputDirectory>${project.build.directory}/../dist/lib</outputDirectory>
                </configuration>
